#include <iostream>
using namespace std;


int main()
{
int num;
int x;
bool prime;

cout <<  "welcome to the prime number finder a l'etal! woop!" << endl;

cout << "Enter a number to see if it's a prime:  ";
cin >> num;


for (x=2; x<num; x++){
    prime = true;
    //cout << "x is: " << x << endl;
    if(num % x == 0) {
    cout << num << "  is not prime it is divisible by: " << x << endl;
    prime = false;
    break;
    }
    }
    if (prime == true) {
    cout << num << " is A PRIME" << endl;
    }

  return 0;
}
